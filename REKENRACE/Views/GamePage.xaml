<Page x:Class="REKENRACE.Views.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:REKENRACE.Views"
      mc:Ignorable="d"
      Title="GamePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*" />
            <RowDefinition Height="111*" />
            <RowDefinition Height="0*" />
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Background="#2e0791"
                Width="auto"
                Grid.ColumnSpan="4"
                Panel.ZIndex="-20"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0"
                       Source="/Models/Images/logo.png"
                       Margin="-10" />

                <TextBlock Grid.Column="1"
                           Text="RekenRace"
                           FontSize="24"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="White" />

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            Margin="0,0,10,0">
                    <Button Click="Home_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Ga naar Home"
                            Height="30">
                        <TextBlock Text="🏠"
                                   FontSize="24"
                                   Foreground="White" />
                    </Button>

                    <Button Click="Sound_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Settings voor het geluid"
                            Height="35">
                        <TextBlock Text="🔊"
                                   FontSize="24"
                                   Foreground="White" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- GAMEPLAY -->
        <Grid Grid.Row="1"
              Background="LightBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock x:Name="PlayerNameTextBlock"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2e0791"
                           Margin="10" />

                <TextBlock x:Name="DifficultyTextBlock"
                           FontSize="18"
                           Foreground="#de1c7e"
                           Margin="10" />

                <TextBlock x:Name="QuestionCounterText"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="10"
                           HorizontalAlignment="Center"
                           Width="175" />

                <TextBlock x:Name="ScoreTextBlock"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="DarkBlue"
                           Margin="10"
                           HorizontalAlignment="Center"
                           Text="Score: 0"
                           Width="175" />

                <TextBlock x:Name="HighScoreTextBlock"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#de1c7e"
                           Margin="10"
                           HorizontalAlignment="Center"
                           Text="Hoogste score ooit: 0" />
            </StackPanel>

            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock x:Name="QuestionText"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="Black"
                           Margin="10" />

                <TextBox x:Name="AnswerInput"
                         Width="198"
                         Height="40"
                         FontSize="16"
                         TextAlignment="Center"
                         BorderBrush="#2e0791"
                         BorderThickness="2"
                         VerticalContentAlignment="Center" />

                <Button Click="CheckAnswer_Click"
                        x:Name="CheckAnswerButton"
                        Content="Controleer Antwoord"
                        Width="200"
                        Height="50"
                        Background="#FF2E0791"
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Margin="10" />

                <TextBlock x:Name="FeedbackText"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="Green"
                           Margin="10" />

                <!-- Herstelknop -->
                <Button x:Name="RestartButton"
                        Content="Opnieuw spelen"
                        Width="200"
                        Height="50"
                        Background="#de1c7e"
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Margin="10"
                        Click="RestartGame_Click"
                        Visibility="Collapsed" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
